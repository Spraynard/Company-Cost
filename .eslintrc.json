{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"react/jsx-uses-vars" : [2]
    },
	"globals" : {
		"React" : "true",
		"ReactDOM" : "true",
		"Hashids" : "true",
		"__dirname" : "true",
        "test" : "true",
        "beforeAll" : "true",
        "beforeEach" : "true",
        "expect" : "true",
        "describe" : "true",
        "process" : "true"
	}
}
